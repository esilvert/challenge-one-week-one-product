<%= turbo_frame_tag 'game', class: 'w-full' do %>
  <div class="w-full" data-controller="slide">

    <div data-slide-target="slide" data-duration="2000">

      <div class="centered text-center block">
        <p class="text-[2rem] w-full message">
          <% if session[SessionConstants::SERIES_COUNT_KEY] == 0 %>
            Ready
          <% else %>
            <%= ['Trop facile ?', 'Un intello', 'Mmhh', 'Plus vite'].sample %>
          <% end %>
        </p>
      </div>
    </div>

    <div data-slide-target="slide" data-duration="1000">
      <div class="centered text-center block">
        <p class="text-[2rem] w-full message">
          <% if session[SessionConstants::SERIES_COUNT_KEY] == 0 %>
            Go&nbsp;!
          <% else %>
            <%= ['OK', "C'est parti", 'Prends Ã§a', 'Tu vas voir', 'Go'].sample %>
          <% end %>
        </p>
      </div>
    </div>
    <div data-slide-target="slide" data-duration="1000">
      <%= link_to 'Continue', play_path, data: {turbo_frame: 'game', 'slide-target': 'redirectTOTO'}, class: 'hidden' %>
      <!-- Necessary so the last one fully displays -->
    </div>
  </div>
<% end %>
